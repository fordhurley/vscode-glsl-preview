{
    "name": "glsl-preview",
    "displayName": "GLSL Preview",
    "description": "",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.31.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:glslPreview.show"
    ],
    "main": "./out/main.js",
    "contributes": {
        "commands": [
            {
                "command": "glslPreview.show",
                "title": "Show GLSL Preview",
                "when": "editorLangId == glsl"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile && yarn run bundle",
        "compile": "tsc -p ./",
        "watch": "concurrently 'tsc -watch -p ./' 'rollup --watch -c rollup.config.js'",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "lint": "tslint -p ./",
        "bundle": "rollup -c rollup.config.js"
    },
    "devDependencies": {
        "@types/node": "^10.12.21",
        "concurrently": "^4.1.0",
        "rollup": "^1.4.1",
        "rollup-plugin-commonjs": "^9.2.1",
        "tslint": "^5.12.1",
        "typescript": "^3.3.1",
        "vscode": "^1.1.28"
    }
}
